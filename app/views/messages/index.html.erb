<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
    </div>
</div>

<%= form_for(@message) do |f| %>
   <div class="col-sm-4">
   名前
   <%= f.text_area :name, :class => "form-control", :size => "1x1" %>
   </div>
   <div class="col-sm-8">
   </div>
   
   <br>
   <div class="col-sm-10">
   内容
   <%= f.text_area :body, :class => "form-control", :size => "5x10"  %>
   <div class="col-sm-2">
   </div>
   <br>
  <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
   <% end %>
   

