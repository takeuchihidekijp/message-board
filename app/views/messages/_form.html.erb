<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<form class="form-horizontal">
  <div class="form-group">
    <label class= "col-sm-2 control-label" for "namae">名前</label>
    <div class="col-sm-4">
   <%= f.text_field :name, :class => "form-control", :size => "1x1" %>
   </div>
   <div class="col-sm-8">
   </div>
  </div>
   
   <br>
   <div class="form-group">
     <label class= "col-sm-2 control-label" for "naiyou">内容</label>
   <div class="col-sm-10">
   <%= f.text_area :body, :class => "form-control", :size => "5x10"  %>
   </div>
   <div class="col-sm-2">
   </div>
   </div>
   <br>
  <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
   <% end %>